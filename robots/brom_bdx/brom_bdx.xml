  <!--
    VARIABLES:
      training:  disable all collisions except foot pad and ground
      pedestal:  place robot on pedestal to simplify early sim2real
      imu-noise: inject noise into imu data
  -->

  <option cone="elliptic" impratio="100"/>
  <compiler angle="radian" meshdir="assets" texturedir="assets" autolimits="true" eulerseq="zyx"/>

  <default>
    <default class="brom">
      <default class="go1">
        <!-- Go1
          kp="10" → 𝑘𝑃=10.0kP =10.0,N·m/rad
          kv="0.3" → 𝑘𝐷=0.3kD =0.3,N·m·s/rad
          damping="0.016" → dynamic friction coefficient 𝜇𝑑=0.016μ d =0.016,N·m·s/rad
          frictionloss="0.15" → static friction 𝜇𝑠=0.15μ  =0.15,N·m
          armature="0.0043" → reflected inertia 𝐼𝑚=0.0043I m =0.0043,kg·m²
          forcerange="-23.7 23.7" → max torque 𝜏max =23.7τ max =23.7,N·m
        -->
        <joint type="hinge" damping="0.016" armature="0.0043" frictionloss="0.15" actuatorfrcrange="-100 100"/>
        <position inheritrange="1" kp="20" kv="1.2" forcerange="-23.7 23.7"/>
      </default>
      <default class="a1">
        <!-- A1
          kp="15" → 𝑘𝑃=15.0kP =15.0,N·m/rad
          kv="0.6" → 𝑘𝐷=0.6kD =0.6,N·m·s/rad
          damping="0.023" → 𝜇𝑑=0.023μd =0.023,N·m·s/rad
          frictionloss="0.45" → 𝜇𝑠=0.45μ s =0.45,N·m
          armature="0.011" → 𝐼𝑚=0.011I m =0.011,kg·m²
          forcerange="-33.5 33.5" → (max torque ≃34.0N·m, rounded to 33.5)
        -->
        <joint type="hinge" damping="0.023" armature="0.011" frictionloss="0.45" actuatorfrcrange="-100 100"/>
        <position inheritrange="1" kp="25" kv="1.2" forcerange="-33.5 33.5"/>
      </default>

      <!-- @START:training@
      <geom contype="0" conaffinity="0"/>
      @END:training@ -->
      <default class="visualgeom">
        <geom material="visualgeom" density="0" group="0" contype="0" conaffinity="0"/>
      </default>
      <default class="collisiongeom">
        <geom group="1"/>
      </default>
      <equality solref="0.001 2"/>

    </default>
  </default>

