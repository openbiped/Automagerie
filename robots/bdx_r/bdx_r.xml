      <equality solref="0.001 2"/>

    </default>

    <!-- @START:training@
    <geom contype="0" conaffinity="0"/>
    @END:training@ -->
    <default class="visualgeom">
      <geom material="visualgeom" density="0" group="0" contype="0" conaffinity="0" />
    </default>
    <default class="collisiongeom">
